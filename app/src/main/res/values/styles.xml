<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialKeyButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">18dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>

    <style name="MyPageColumnChartStyle">
        <item name="layers">column</item>
        <item name="showBottomAxis">true</item>
        <item name="showStartAxis">true</item>
        <item name="scrollEnabled">false</item>
        <item name="zoomEnabled">false</item>
    </style>

    <style name="FragmentTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:background">@color/app_background</item>
    </style>
</resources>
