<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialerActivity">

    <!-- 중앙 컨텐츠 영역 -->
    <LinearLayout
        android:id="@+id/content_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/menu_bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 안내 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가짜 수신 전화 테스트"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>
<!--        기본 앱으로 변경하는 버튼 -->


        <Button
            android:id="@+id/btnSetDefaultDialer"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:text="기본전화앱으로변경"
            android:textSize="16sp"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_phone_call"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:backgroundTint="@color/white"/>
        <!-- 가짜 전화 버튼 -->
        <Button
            android:id="@+id/btnFakeCall"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:text="가짜 전화 받기"
            android:textSize="16sp"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_phone_call"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:backgroundTint="@color/teal_700"/>

    </LinearLayout>

    <!-- 하단 네비게이션 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/main_menu_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>