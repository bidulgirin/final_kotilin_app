<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_my_page_title"
            style="@style/FragmentTitleStyle"
            android:text="마이페이지" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 사용자 정보 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/stroke_color"
                app:cardBackgroundColor="@color/component_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름: -"
                        android:textStyle="bold"
                        android:textColor="@color/main_text"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이메일: -"
                        android:textColor="@color/sub_text"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- 일별/월별 토글 -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/togglePeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:checkedButton="@+id/btnDaily">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDaily"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="일별"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/primary_blue"
                    android:textColor="@color/primary_blue" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMonthly"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="월별"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/primary_blue"
                    android:textColor="@color/primary_blue" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="28dp" />

            <!-- 1) 통화 수 차트 -->
            <TextView
                android:id="@+id/tvCallsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일별 통화 수"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/main_text" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/stroke_color"
                app:cardBackgroundColor="@color/app_background">

                <com.patrykandpatrick.vico.views.cartesian.CartesianChartView
                    android:id="@+id/chartDailyCalls"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:padding="16dp" />
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- 2) 의심 통화 수 차트 -->
            <TextView
                android:id="@+id/tvSuspiciousTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일별 의심 통화 수"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/main_text" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/stroke_color"
                app:cardBackgroundColor="@color/app_background">

                <com.patrykandpatrick.vico.views.cartesian.CartesianChartView
                    android:id="@+id/chartDailySuspiciousCalls"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:padding="16dp" />
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- 3) 카테고리 TOP 5 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP 5"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/main_text" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/stroke_color"
                app:cardBackgroundColor="@color/app_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chartTopCategories"
                        android:layout_width="match_parent"
                        android:layout_height="260dp" />

                    <TextView
                        android:id="@+id/tvCategorySummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:lineSpacingExtra="4dp"
                        android:text="데이터를 분석 중입니다..."
                        android:textColor="@color/sub_text"
                        android:textSize="13sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackSetting"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="설정으로 돌아가기"
                android:textSize="16sp"
                app:cornerRadius="16dp"
                android:textColor="@color/pure_white"
                android:backgroundTint="@color/primary_blue" />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
